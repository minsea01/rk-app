# EditorConfig for consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
max_line_length = 100

[*.{yaml,yml}]
indent_size = 2

[*.{json,jsonl}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[*.{cpp,c,h,hpp}]
indent_size = 2

[CMakeLists.txt,*.cmake]
indent_size = 2
